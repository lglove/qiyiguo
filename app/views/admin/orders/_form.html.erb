<%= form_for @order, url: "/admin/orders", :html => { :class => "form-horizontal admin" } do |f| %>
    <% if @order.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@order.errors.count, "error") %> 表单提交错误</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @order.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <table class="table table-bordered table-striped">
  <tr>
    <td class="text-right"><label for="admin_admin_name">姓名:</label></td>
    <td><%= f.text_field :name, :class => 'form-control' %></td>
    <%= hidden_field_tag :id, "#{@order.id}"%>
  </tr>
  <tr>
    <td class="text-right"><label for="admin_admin_name">价格:</label></td>
    <td><%= f.text_field :price, :class => 'form-control' %></td>
  </tr>
  <tr>
    <td class="text-right"><label for="admin_admin_name">状态:</label></td>
    <td><%= f.text_field :status, :class => 'form-control' %></td>
  </tr>
  <tr>
    <td class="text-right"><label for="admin_admin_name">快递:</label></td>
    <td><%= f.text_field :express, :class => 'form-control' %></td>
  </tr>
  <tr>
    <td class="text-center actions" colspan=2>
      <%= f.submit "提交", :class => 'btn btn-primary mr20' %>
      <%= link_to '取消', admin_orders_path, :class => 'btn btn-default' %>
    </td>
  </tr>
</table>
<% end %>
