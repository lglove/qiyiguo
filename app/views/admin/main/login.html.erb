<div style="margin:auto; width:400px; margin-top: 100px;">

  <div class="panel panel-default">
    <div class="panel-heading">用户登录</div>
    <div class="panel-body">
      <%= form_tag :action=>"signin" do %>
        <table class="table">
           <tbody><tr>
             <td>账号:</td>
             <td><input placeholder="输入用户名或邮件地址" class="form-control" id="name" name="name" size="30" type="text" value=""></td>
           </tr>
            <tr>
              <td>密码:</td>
              <td><input class="form-control" id="password" name="password" type="password" value=""></td>
            </tr>
          </tbody>
        </table>
        <div class="text-center">
          <input class="btn btn-primary" name="commit" type="submit" value="登录">
        </div>
      <% end %>
    </div>
  </div>
</div>
