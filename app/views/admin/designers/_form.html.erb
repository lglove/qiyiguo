<%= form_for @designer, url: "/admin/designers", :html => { :class => "form-horizontal designer" } do |f| %>
    <% if @designer.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@designer.errors.count, "error") %> 表单提交错误</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @designer.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <table class="table table-bordered table-striped">
  <tr>
    <td class="text-right"><label for="admin_admin_name">姓名:</label></td>
    <td><%= f.text_field :name, :class => 'form-control' %></td>
    <%= hidden_field_tag :id, "#{@designer.id}"%>
  <tr>
  <tr>
    <td class="text-right"><label for="admin_admin_name">头像:</label></td>
    <td><%= f.file_field :logo, :class => 'form-control' %></td>
  <tr>
  <tr>
    <td class="text-right"><label for="admin_admin_name">性别:</label></td>
    <td><%= f.select :sex,['男','女'],{}, :class => 'form-control' %></td>
  <tr>
  <tr>
    <td class="text-right"><label for="admin_admin_name">电话:</label></td>
    <td><%= f.text_field :mobilephone, :class => 'form-control' %></td>
  <tr>
  <tr>
    <td class="text-right"><label for="admin_admin_name">邮箱:</label></td>
    <td><%= f.text_field :email, :class => 'form-control' %></td>
  <tr>
  <tr>
    <td class="text-right"><label for="admin_admin_name">描述:</label></td>
    <td><%= f.text_area :description, :class => 'form-control' %></td>
  <tr>
  <tr>
    <td class="text-center actions" colspan=2>
      <%= f.submit "提交", :class => 'btn btn-primary mr20' %>
      <%= link_to '取消', admin_designers_path, :class => 'btn btn-default' %>
    </td>
  </tr>
</table>
<% end %>
<script>
  $(function() {
    $("form").validate({
      rules: {
        "designer[name]": "required",
        "designer[email]": {
          required: true,
          email: true
        }
      },
      messages: {
        "designer[name]": "请输入姓名",
        "designer[email]": {
          required: "请输入Email地址",
          email: "请输入正确的email地址"
        }
      }
    });
  });
</script>
