<table class="table table-bordered table-striped">
  <tr>
    <td class="col-sm-5 form-inline" >
      <%= form_for '', method: 'get' do |f|%>
        <%= text_field_tag :name, params[:name] , placeholder: '输入名称查询', :class=>"form-control"%>
        <%= f.submit '搜索', class: 'btn btn-primary form-control'%>
      <% end %>
    </td>
    <td class="text-right col-sm-5"><%= link_to '添加', new_admin_videos_path, :class=>"btn btn-primary" %></td>
  </tr>
</table>
<table class="table table-bordered table-striped">
  <tbody>
    <tr>
      <th class="text-center">ID</th>
      <th class="text-center">名称</th>
      <th class="text-center">链接</th>
      <th class="text-center">创建时间</th>
      <th class="text-center" colspan="3">操作</th>
    </tr>
    <% @admin_videos.each do |video| %>
      <tr>
        <td class="text-center"><%= video.id %></td>
        <td class="text-center"><%= video.name %></td>
        <td class="text-center"><%= video.url %></td>
        <td class="text-center"><%= video.created_at.to_date %></td>
        <td class="text-center">
          <%= link_to '编辑',{:action=>'edit', :id=>video.id, :page=>params[:page]}, :class => 'btn btn-default' %></td>
        <td class="text-center"> <%= link_to '删除',
                      admin_videos_path(video),
                      :method => :delete,
                      :data => { :confirm => '你确定删除?' },
                      :class => 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="pagination center">
  <%= paginate @admin_videos %>
</div>
