<%- model_class = Admin::Admin -%>
<div class="page-header">
  <h1><%=t '.title', :default => "用户"%></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:邮箱) %>:</strong></dt>
  <dd><%= @admin_admin.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:密码) %>:</strong></dt>
  <dd><%= @admin_admin.password %></dd>
  <dt><strong><%= model_class.human_attribute_name(:姓名) %>:</strong></dt>
  <dd><%= @admin_admin.name %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              admin_admins_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_admin_path(@admin_admin), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_admin_path(@admin_admin),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
