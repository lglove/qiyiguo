<table class="table table-bordered table-striped">
  <tr>
    <td class="col-sm-5 form-inline" >
      <%= form_for '', method: 'get' do |f|%>
        <%= text_field_tag :email, params[:email] , placeholder: '输入邮箱查询', :class=>"form-control"%>
        <%= text_field_tag :name, params[:name] , placeholder: '输入姓名查询', :class=>"form-control"%>
        <%= f.submit '搜索', class: 'btn btn-primary form-control'%>
      <% end %>
    </td>
    <td class="text-right col-sm-5"><%= link_to '添加', new_admin_admins_path, :class=>"btn btn-primary" %></td>
  </tr>
</table>
<table class="table table-bordered table-striped">
  <tbody>
    <tr>
      <th class="text-center">ID</th>
      <th class="text-center">姓名</th>
      <th class="text-center">邮箱</th>
      <th class="text-center">创建时间</th>
      <th class="text-center" colspan="3">操作</th>
    </tr>
    <% @admin_users.each do |admin| %>
      <tr>
        <td class="text-center"><%= admin.id%></td>
        <td class="text-center"><%= admin.name %></td>
        <td class="text-center"><%= admin.email %></td>
        <td class="text-center"><%= admin.created_at.to_date %></td>
        <td class="text-center">
          <%= link_to '编辑',{:action=>'edit', :id=>admin.id, :page=>params[:page]}, :class => 'btn btn-default' %></td>
        <td class="text-center"> <%= link_to '权限', {:action=>"rights", :id=>admin.id}, :class => 'btn btn-default' %></td>
        <td class="text-center"> <%= link_to '删除',
                      {:action=>'shanchu', :id=>admin.id},
                      :data => { :confirm => '你确定删除?' },
                      :class => 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="pagination center">
  <%= paginate @admin_users %>
</div>
