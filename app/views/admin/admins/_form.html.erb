<%= form_for @admin_user, url: "/admin/admins", :html => { :class => "form-horizontal admin" } do |f| %>
    <% if @admin_user.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@admin_user.errors.count, "error") %> 表单提交错误</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @admin_user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <table class="table table-bordered table-striped">
  <tr>
    <td class="text-right"><label for="admin_admin_email">邮箱:</label></td>
    <td><%= f.text_field :email, :class => 'form-control' %></td>
    <%= hidden_field_tag :id, "#{@admin_user.id}"%>
  </tr>
  <tr>
    <td class="text-right"><label for="admin_admin_name">姓名:</label></td>
    <td><%= f.text_field :name, :class => 'form-control' %></td>
  <tr>
  </tr>
    <td class="text-right"><label for="admin_admin_password">密码:</label></td>
    <td><%= f.password_field :password, :class => 'form-control' %></td>
  </tr>
  <tr>
    <td class="text-center actions" colspan=2>
      <%= f.submit "提交", :class => 'btn btn-primary mr20' %>
      <%= link_to '取消', admin_admins_path, :class => 'btn btn-default' %>
    </td>
  </tr>
</table>
<% end %>
