        <td><%= @body.height %></td>
        <td>体重:</td>
        <td><%= @body.weight %></td>
        <td>上衣尺码</td>
        <td><%= @body.shangyichima %></td>
        <td>胸围:</td>
        <td><%= @body.xiongwei %></td>
      </tr>
      <tr>
        <td>臂长:</td>
        <td><%= @body.bichang %></td>
        <td>肩宽:</td>
        <td><%= @body.jiankuan %></td>
        <td>腰围:</td>
        <td><%= @body.yaowei %></td>
        <td>臂围:</td>
        <td><%= @body.biwei %></td>
      </tr>
      <tr>
        <td>大腿围:</td>
        <td><%= @body.datuiwei %></td>
        <td>裤长:</td>
        <td><%= @body.kuchang %></td>
        <td>鞋码:</td>
        <td><%= @body.xiema %></td>
      </tr>
    </table>
  </div>
</div>

<script>
$(document).ready(function() {
    $(".amount").editable('/admin/orders/user_amount',{
      type   : 'text',
      select : true,
      event: 'dblclick',      // 双击编辑
      submit : 'OK',
      cancel : 'cancel',
      style: 'width: 100%',   // input 宽度是100%
      submitdata: function(value, settings){  // $(this) 代表当前被click的元素
        result = {
          id: $(this).attr('detail_id'),
        }
        return result
      }
    });

    $(".month_amount").editable('/admin/orders/month_amount',{
      type   : 'text',
      select : true,
      event: 'dblclick',      // 双击编辑
      submit : 'OK',
      cancel : 'cancel',
      style: 'width: 100%',   // input 宽度是100%
      submitdata: function(value, settings){  // $(this) 代表当前被click的元素
        result = {
          id: $(this).attr('detail_id'),
        }
        return result
      }
    });

    $(".invite_amount").editable('/admin/orders/invite_amount',{
      type   : 'text',
      select : true,
      event: 'dblclick',      // 双击编辑
      submit : 'OK',
      cancel : 'cancel',
      style: 'width: 100%',   // input 宽度是100%
      submitdata: function(value, settings){  // $(this) 代表当前被click的元素
        result = {
          id: $(this).attr('detail_id'),
        }
        return result
      }
    });
  });
</script>
