<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">个人信息</h3>
  </div>
  <div class="panel-body">
    <table class='table table-hover table-striped'>
      <tr>
        <td>昵称</td>
        <td><%= @user.name%></td>
        <td>手机号:</td>
        <td><%= @user.mobilephone %></td>
        <td>邮箱:</td>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <td>生日:</td>
        <td><%= @user.birthday%></td>
        <td>地址:</td>
        <td><%= @user.userAddress.last.address %></td>
      </tr>
      <tr>
        <td>余额:</td>
        <td class="amount" id="<%= @user.id%>" > <%= @user.amount%></td>
        <td>利息:</td>
        <td class="month_amount" id="<%= @user.id%>" > <%= @user.month_amount%></td>
        <td>代金券:</td>
        <td class="invite_amount" id="<%= @user.id%>" > <%= @user.invite_amount%></td>
      </tr>
      <tr>
        <td>设计师:</td>
        <td><%= @designer.name%></td>
      </tr>
    </table>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">风格信息</h3>
  </div>
  <div class="panel-body">
    <table class='table table-hover table-striped'>
      <tr>
        <td>偏爱风格:</td>
        <td><%= @style.style%></td>
        <td>肤色</td>
        <td><%= @style.fuse %></td>
      </tr>
      <tr>
        <td>抗拒类型:</td>
        <td><%= @style.kangju%></td>
        <td>身材特点</td>
        <td><%= @style.shencai%></td>
      </tr>
    </table>
  </div>
</div>

