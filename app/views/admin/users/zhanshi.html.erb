      <tr>
        <td>偏爱风格:</td>
        <td><%= @style.style%></td>
        <td>肤色</td>
        <td><%= @style.fuse %></td>
      </tr>
      <tr>
        <td>抗拒类型:</td>
        <td><%= @style.kangju%></td>
        <td>身材特点</td>
        <td><%= @style.shencai%></td>
      </tr>
    </table>
  </div>
</div>

