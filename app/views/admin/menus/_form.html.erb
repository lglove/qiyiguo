<%= form_for(@admin_menu, :html => { :class => "form-horizontal menu"} ) do |f| %>
  <% if @admin_menu.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@admin_menu.errors.count, "error") %> 表单提交错误</h3>
      </div>
      <div class="panel-body">
        <ul>
          <% @admin_menu.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <table class="table table-striped table-bordered">
    <tr>
      <td class="text-right"><label for="admin_menu_text">文本</label></td>
      <td><%= f.text_field :text, :class => 'form-control' %></td>
    </tr>
    <tr>
      <td class="text-right"><label for="admin_menu_url">链接</label></td>
      <td>
        <%= f.text_field :url, :class => 'form-control' %>
      </td>
    </tr>
    <tr>
      <td class="text-right"><label for="admin_menu_hide">隐藏</label></td>
      <td>
        <%= f.check_box :hide %>
      </td>
    </tr>
    <tr>
      <td class="text-right"><label for="admin_menu_position">排序</label></td>
      <td>
        <%= f.text_field :position, :class => 'form-control' %>
      </td>
    </tr>
    <tr>
      <td class="text-right"><label for="admin_menu_position">父节点ID</label></td>
      <td>
        <%= f.text_field :parent_id, :class => 'form-control' %>
      </td>
    </tr>
    <tr>
      <td colspan=2 class="text-center">
        <%= f.submit "提交", :class => 'btn btn-primary mr20' %>
        <%= link_to '取消', admin_menus_path, :class => 'btn btn-default' %>

      </td>
    </tr>
  </table>
<% end %>
